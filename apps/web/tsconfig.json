{
  "extends": "@repo/typescript-config/nextjs.json",
  "compilerOptions": {
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./*"],
      // "@utils/*": ["./utils/*"],
      // "@shared/*": ["../../packages/shared/*"], // For monorepo setup
      // "@app/*": ["../../packages/app/*"], // For monorepo setup
      // "@lib/*": ["../../packages/lib/*"] // For monorepo setup
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "next-env.d.ts",
    "next.config.js",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
